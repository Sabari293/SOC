#include<iostream>
#include<vector>
#include<algorithm>
#include<cmath>
using namespace std;
typedef long long ll;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int c=0;
        for(int i=0; i<n; i++){
            int x,y;
            cin>>x>>y;
            if(x>y){
                c++;
            }
        }
        cout<<c<<endl;
    }
}
