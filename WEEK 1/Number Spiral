#include<iostream>
#include<algorithm>
#include<cmath>
#include<string>
#include<vector>
typedef long long ll;
using namespace std;
 
int main(){
    ll t;
    cin>>t;
    while(t--){
        ll x,y;
        cin>>y>>x;
        if(x<=y){
            if(y%2==0 ){
                ll a=y*y-x+1;
                cout<<a<<endl;
            }
            else{
                ll a=(y-1)*(y-1)+x;
                cout<<a<<endl;
            }
        
        }
        else{
            if(x%2!=0){
                ll a=x*x-y+ 1;
                cout<<a<<endl;
            }
            else{
                ll a=(x-1)*(x-1)+y;
                cout<<a<<endl;
            }
        }
 
    }
    
}
